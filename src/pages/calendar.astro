---
import BaseLayout from "@/layouts/BaseLayout.astro";

export const prerender = true;
---

<BaseLayout>
	<div class="min-h-screen py-32">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<h1 class="text-5xl md:text-6xl font-bold mb-6">Economic Calendar</h1>
				<p class="text-xl text-white/70 mb-12">
					Stay informed about key economic events and market-moving announcements.
				</p>

				<!-- Calendar Widget Placeholder -->
				<div class="p-12 rounded-xl border border-white/10 bg-white/5 text-center">
					<div class="max-w-2xl mx-auto">
						<svg class="w-24 h-24 mx-auto mb-6 text-white/20" fill="currentColor" viewBox="0 0 16 16">
							<path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
						</svg>
						<h2 class="text-2xl font-bold mb-4">Economic Calendar Coming Soon</h2>
						<p class="text-white/70 mb-6">
							We're building an integrated economic calendar to help you plan your trades around major economic events.
						</p>
						<a href="https://dashboard.paxeer.app/" target="_blank" class="inline-block px-6 py-3 bg-white text-black rounded-lg font-semibold hover:bg-gray-200 transition-colors">
							View Dashboard
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>
