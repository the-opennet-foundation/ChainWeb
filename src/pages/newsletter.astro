---
import BaseLayout from "@/layouts/BaseLayout.astro";

export const prerender = true;
---

<BaseLayout>
	<div class="min-h-screen py-32">
		<div class="container mx-auto px-4">
			<div class="max-w-2xl mx-auto text-center">
				<h1 class="text-5xl md:text-6xl font-bold mb-6">Newsletter</h1>
				<p class="text-xl text-white/70 mb-12">
					Get weekly trading insights, platform updates, and exclusive content delivered to your inbox.
				</p>

				<!-- Newsletter Signup Form -->
				<div class="p-8 rounded-xl border border-white/10 bg-gradient-to-br from-white/5 to-transparent">
					<form class="space-y-6">
						<div>
							<label for="email" class="block text-left mb-2 font-semibold">Email Address</label>
							<input 
								type="email" 
								id="email" 
								placeholder="your@email.com"
								class="w-full px-4 py-3 rounded-lg bg-black border border-white/20 focus:border-white/40 focus:outline-none transition-colors"
								required
							/>
						</div>
						
						<div class="text-left">
							<label class="flex items-start gap-3 cursor-pointer">
								<input type="checkbox" class="mt-1" required />
								<span class="text-sm text-white/70">
									I agree to receive marketing emails and understand I can unsubscribe at any time.
								</span>
							</label>
						</div>

						<button type="submit" class="w-full px-8 py-3 bg-white text-black rounded-lg font-semibold hover:bg-gray-200 transition-colors">
							Subscribe to Newsletter
						</button>
					</form>
				</div>

				<!-- Benefits -->
				<div class="mt-12 grid md:grid-cols-3 gap-6 text-left">
					<div class="p-4 rounded-lg border border-white/10 bg-white/5">
						<h3 class="font-bold mb-2">Weekly Insights</h3>
						<p class="text-sm text-white/70">Expert analysis and trading strategies</p>
					</div>
					<div class="p-4 rounded-lg border border-white/10 bg-white/5">
						<h3 class="font-bold mb-2">Platform Updates</h3>
						<p class="text-sm text-white/70">Be first to know about new features</p>
					</div>
					<div class="p-4 rounded-lg border border-white/10 bg-white/5">
						<h3 class="font-bold mb-2">Exclusive Content</h3>
						<p class="text-sm text-white/70">Subscriber-only resources and guides</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>
